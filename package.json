{
    "name": "uSAINT",
    "version": "1.0.0",
    "description": "",
    "main": "build/main.js",
    "scripts": {
        "compile": "tsc && copyfiles -f assets/* build/assets",
        "start": "npm run compile && cross-env DEBUG=true electron .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "deploy:osx": "npm run compile && electron-builder --mac ",
        "deploy:win": "npm run compile && electron-builder --win nsis:x64"
    },
    "build": {
        "productName": "uSAINT",
        "appId": "ac.kr.ssu.usaint",
        "copyright": "Copyright Soongsil University All Rights Reserved",
        "asar": true,
        "mac": {
            "category": "public.app-category.social-networking",
            "target": "dmg",
            "darkModeSupport": false,
            "electronLanguages": [
                "ko"
            ],
            "icon": "./assets/icons/mac/ico.icns"
        },
        "dmg": {
            "title": "uSAINT",
            "icon": "./assets/icons/mac/ico.icns"
        },
        "win": {
            "target": "nsis"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": false,
            "createDesktopShortcut": true,
            "shortcutName": "uSAINT",
            "language": 1042
        },
        "directories": {
            "buildResources": "./resources/installer/",
            "output": "./dist/",
            "app": "."
        }
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "electron": "^23.1.0",
        "electron-builder": "^23.6.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "electron-store": "^8.1.0"
    }
}
